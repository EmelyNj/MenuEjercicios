    <ScrollView>
        <VerticalStackLayout
            Padding="8"
            Spacing="5">

            <Label Text="Ingrese un número del 1 al 10" HorizontalTextAlignment="Center"></Label>
            <Entry x:Name="num" WidthRequest="110" BackgroundColor="LightGray" TextColor="Black"></Entry>

            <Entry x:Name="r1" WidthRequest="110"></Entry>
            <Entry x:Name="r2" WidthRequest="110"></Entry>
            <Entry x:Name="r3" WidthRequest="110"></Entry>
            <Entry x:Name="r4" WidthRequest="110"></Entry>
            <Entry x:Name="r5" WidthRequest="110"></Entry>
            <Entry x:Name="r6" WidthRequest="110"></Entry>
            <Entry x:Name="r7" WidthRequest="110"></Entry>
            <Entry x:Name="r8" WidthRequest="110"></Entry>
            <Entry x:Name="r9" WidthRequest="110"></Entry>
            <Entry x:Name="r10" WidthRequest="110"></Entry>

            <Button
                x:Name="Obtener"
                Text="Calcular" 
                Clicked="Obtener_Clicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>