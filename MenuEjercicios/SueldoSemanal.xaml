            Spacing="10">
           

            <Label
                Text="Ingrese pago recibido" HorizontalOptions="Center" />
            <Entry x:Name="Pago" WidthRequest="200"></Entry>

            <Label
                Text="Ingrese las horas trabajadas" HorizontalOptions="Center"/>
            <Entry x:Name="Horas" WidthRequest="200"></Entry>

            <Label
                Text="El sueldo por del trabajador es de: " HorizontalOptions="Center"/>
