<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuEjercicios.Langosta"
             Title="Langosta Ahumada">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label 
         Text= "Aplicación de la Langosta Ahumada"
         VerticalOptions="Center" 
         HorizontalOptions="Center" />

            <Entry Placeholder="Escriba la cantidad de platos " x:Name="NumPlatos"/>
            <Label  Text="Total a pagar:"/>
            <Entry Placeholder="$" x:Name="Total"/>
            <Button Text="Cálcular Pago" HorizontalOptions="Center" Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>